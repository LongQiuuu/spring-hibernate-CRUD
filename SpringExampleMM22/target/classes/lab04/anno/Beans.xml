<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	
	<!--告訴他要去哪裡掃描  -->
	<context:component-scan base-package="lab04.anno"></context:component-scan>
	
	<!-- 組態資訊撰寫 -->
	<bean id='speed' class='java.lang.Integer' >
	<!-- 下列依賴注入 -->
	  <constructor-arg value="120"></constructor-arg>
	</bean>
	
	<bean id='hour' class='java.lang.Double' >
	<!-- 下列依賴注入 -->
	  <constructor-arg value="2.5"></constructor-arg>
	</bean>
	
	

	
	
</beans>